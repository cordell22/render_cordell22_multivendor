<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="stylesheets/style.css" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light" id="background-image-container">
    <div class="container">
      <!-- style doesnt work in css  style="background-image: url('/../pics/<%= /*  randomImage */ %>')" -->
        <div id="main-nav">
          
      <a class="navbar-brand nav-font-color" href="/">Multivendor E-Shop</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link nav-font-color" href="/">Home</a>
          </li>
          <% if (loggedIn) { %>
            <% if (userRole === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link nav-font-color" href="/dashboard">Dashboard</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link nav-font-color" href="/show-cart">Cart</a>
              </li>
            <% } %>
            <% if (userRole === 'vendor') { %>
              <li class="nav-item">
                <a class="nav-link nav-font-color" href="/new-product">Create New Product</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link nav-font-color" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link nav-font-color" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-font-color" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-font-color" href="/show-cart">Cart</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>  <!--  end main-navbar   -->
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Content will be injected here -->
    <% if (typeof content !== 'undefined') { %>
      <%= content %>
    <% } %>
  </div>
<!-- 
  <footer class="footer"> -->
    <!-- Footer content here --><!--
    <p>&copy; 2024 Multivendor E-Shop. siskotrade.com All rights reserved.</p>
  </footer>
-->

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>