<!DOCTYPE html>
<html>
<head>
  <title>Edit Rifle Product</title>
</head>
<body>
  <h1>Edit Rifle Product</h1>

  <form action="/admin/stock/products/<%= productId %>/edit?categoryType=<%= categoryType %>&categoryId=<%= categoryId %>" method="post">
    <!-- Common fields -->
    <!-- ... -->

    <!-- Rifle-specific fields -->
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= product.name %>"><br>

    <label for="description">Description:</label>
    <textarea name="description"><%= product.description %></textarea><br>

    <label for="image">Image:</label>
    <input type="file" name="image"><br>

    <label for="price">Price:</label>
    <input type="number" name="price" value="<%= product.price %>"><br>

    <label for="stock">Stock:</label>
    <input type="number" name="stock" value="<%= product.stock %>"><br>

    <button type="submit">Save Changes</button>
  </form>

  <a href="/admin/stock/products?categoryType=<%= categoryType %>&categoryId=<%= categoryId %>">Back to Products List</a>
</body>
</html>